{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "9.5.0"
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": ""
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": ""
    },
    {
      "type": "panel",
      "id": "bargauge",
      "name": "Bar gauge",
      "version": ""
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "2.0.0"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "iteration": 1,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "type": "row",
      "title": "Cluster Nodes",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 1
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Node CPU usage (%)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[$__rate_interval])) * 100)",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Node memory usage (%)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": "(1 - (avg by (instance) (node_memory_MemAvailable_bytes) / avg by (instance) (node_memory_MemTotal_bytes))) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "row",
      "title": "Workload Pods (namespace-aware)",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "id": 4
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Pods – CPU (cores) in namespace \"$namespace\"",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "targets": [
        {
          "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"$namespace\", image!=\"\"}[$__rate_interval]))",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "cores",
          "min": 0
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Pods – Memory (MiB) in namespace \"$namespace\"",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
      "targets": [
        {
          "expr": "sum by (pod) (container_memory_usage_bytes{namespace=\"$namespace\", image!=\"\"}) / 1024 / 1024",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "MiB",
          "min": 0
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 7,
      "type": "bargauge",
      "title": "Pod restarts (last 10m) in namespace \"$namespace\"",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 18 },
      "targets": [
        {
          "expr": "sum by (pod) (increase(kube_pod_container_status_restarts_total{namespace=\"$namespace\"}[10m]))",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        },
        "overrides": []
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      }
    },
    {
      "id": 11,
      "type": "timeseries",
      "title": "PVC disk usage (%) in namespace \"$namespace\"",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 18 },
      "targets": [
        {
          "expr": "(kubelet_volume_stats_used_bytes{namespace=\"$namespace\"} / kubelet_volume_stats_capacity_bytes{namespace=\"$namespace\"}) * 100",
          "legendFormat": "{{persistentvolumeclaim}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "row",
      "title": "Ingress / Traffic (Traefik)",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 24 },
      "id": 8
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "5xx error rate by service (Traefik)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 25 },
      "targets": [
        {
          "expr": "sum by (service) (rate(traefik_service_requests_total{code=~\"5..\"}[$__rate_interval]))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "min": 0
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "Request rate by service (Traefik)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 25 },
      "targets": [
        {
          "expr": "sum by (service) (rate(traefik_service_requests_total[$__rate_interval]))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "min": 0
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["lmstool", "kubernetes", "cluster", "infra"],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "label": "Prometheus",
        "query": "prometheus",
        "refresh": 1,
        "hide": 0
      },
      {
        "name": "namespace",
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "label": "Namespace",
        "query": "label_values(kube_pod_info, namespace)",
        "refresh": 1,
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "current": {
          "text": "lmstool",
          "value": "lmstool"
        }
      }
    ]
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "Cluster & App Health – lmstool / infra",
  "uid": null,
  "version": 1
}

